            //-     | $9.
            //-     small 50
            li.d-flex.justify-content-between.align-items-center
              span.me-2 Discount:
              span.text-end &mdash;
          h3.orderTotal.fw-normal.text-center.my-4
            | $274.
            small 50
          form.needs-validation(novalidate='')
            .mb-3
              input.form-control(type='text' placeholder='Promo code' required='')
              .invalid-feedback Please provide promo code.
            button.btn.btn-outline-primary.d-block.w-100(type='submit') Apply promo code
  // Navigation (mobile)
  .row.d-lg-none
    .col-lg-8
      .d-flex.pt-4.mt-3
        .w-50.pe-3
          a.btn.btn-secondary.d-block.w-100(href='/checkout')
            i.ci-arrow-left.mt-sm-0.me-1
            span.d-none.d-sm-inline Back to Adresses
            span.d-inline.d-sm-none Back
        .w-50.ps-2
          a.btn.btn-primary.d-block.w-100(href='/payment')
