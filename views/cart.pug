doctype html
head
  meta(charset='utf-8')
  title Commercio | Cart
  // SEO Meta Tags
  meta(name='description' content='Cartzilla - Bootstrap E-commerce Template')
  meta(name='keywords' content='bootstrap, shop, e-commerce, market, modern, responsive,  business, mobile, bootstrap, html5, css3, js, gallery, slider, touch, creative, clean')
  meta(name='author' content='Createx Studio')
  // Viewport
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Favicon and Touch Icons
  link(rel='shortcut icon' href='/assets/theme/img/comm_favicon.png' type='image/png')
  // Vendor Styles including: Font Icons, Plugins, etc.
  link(rel='stylesheet' media='screen' href='/assets/theme/vendor/simplebar/dist/simplebar.min.css')
  link(rel='stylesheet' media='screen' href='/assets/theme/vendor/tiny-slider/dist/tiny-slider.css')
  // Main Theme Styles + Bootstrap
  link(rel='stylesheet' media='screen' href='/assets/theme/css/theme.min.css')
// Body

// Navbar Marketplace
// Remove "navbar-sticky" class to make navigation bar scrollable with the page.
header.bg-light.shadow-sm.navbar-sticky
  .navbar.navbar-expand-lg.navbar-light
    .container
      a.navbar-brand.d-none.d-sm-block.flex-shrink-0.me-4.order-lg-1(href='/')
        img(src='/assets/theme/img/comm_logo_transparent.png' width='122' alt='Commercio')
      // Toolbar
      .navbar-toolbar.d-flex.align-items-center.order-lg-3
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse')
          span.navbar-toggler-icon
        a.navbar-tool.d-none.d-lg-flex(href='javascript:void(0)' data-bs-toggle='collapse' data-bs-target='#searchBox' role='button' aria-expanded='false' aria-controls='searchBox')
          span.navbar-tool-tooltip Search
          .navbar-tool-icon-box
            i.navbar-tool-icon.ci-search
        a.navbar-tool.d-none.d-lg-flex(href='dashboard-favorites.html')
          span.navbar-tool-tooltip Favorites
          .navbar-tool-icon-box
            i.navbar-tool-icon.ci-heart
        include _cart-nav
      #navbarCollapse.collapse.navbar-collapse.me-auto.order-lg-2
        // Search
        .input-group.d-lg-none.my-3
          i.ci-search.position-absolute.top-50.start-0.translate-middle-y.text-muted.fs-base.ms-3
          input.form-control.rounded-start(type='text' placeholder='Search marketplace')
        
  // Search collapse
  #searchBox.search-box.collapse
    .card.pt-2.pb-4.border-0.rounded-0
      .container
        .input-group
          i.ci-search.position-absolute.top-50.start-0.translate-middle-y.text-muted.fs-base.ms-3
          input.form-control.rounded-start(type='text' placeholder='Search marketplace')

// Page Title
.page-title-overlap.bg-dark.pt-4
  .container.d-lg-flex.justify-content-between.py-2.py-lg-3
    .order-lg-2.mb-3.mb-lg-0.pt-lg-2
      nav(aria-label='breadcrumb')
        ol.breadcrumb.breadcrumb-light.flex-lg-nowrap.justify-content-center.justify-content-lg-start
          li.breadcrumb-item
            a.text-nowrap(href='/')
              i.ci-home
              | Home
          li.breadcrumb-item.text-nowrap
            a(href='#') Shop
          li.breadcrumb-item.text-nowrap.active(aria-current='page') Cart
    .order-lg-1.pe-lg-4.text-center.text-lg-start
      h1.h3.text-light.mb-0 Your cart
.container.pb-5.mb-2.mb-md-4
  .row
    // List of items
    section.col-lg-8
      .d-flex.justify-content-between.align-items-center.pt-3.pb-4.pb-sm-5.mt-1
        h2.h6.text-light.mb-0 Products
        a.btn.btn-outline-primary.btn-sm.ps-2(href='shop-grid-ls.html')
          i.ci-arrow-left.me-2
          | Continue shopping
      
