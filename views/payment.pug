                    //-         span.text-muted x 1
            
          ul.list-unstyled.fs-sm.pb-2.border-bottom
            li.d-flex.justify-content-between.align-items-center
              span.me-2 Subtotal:
              span.orderSubtotal.text-end
                | $265.
                small 00
            li.d-flex.justify-content-between.align-items-center
              span.me-2 Shipping:
              span.text-end &mdash;
            //- li.d-flex.justify-content-between.align-items-center
            //-   span.me-2 Taxes:
            //-   span.text-end
            //-     | $9.
            //-     small 50
            li.d-flex.justify-content-between.align-items-center
              span.me-2 Discount:
              span.text-end &mdash;
